<div class="customBody1">
    <div class="container col-md-4 col-md-1 bg-dirtywhite mt-5 pt-1 h-75  " style="font-weight: bold;">
        <header class="heading pt-3 text-center  " style="font-size: 30px;"> Sign Up</header>
        <hr>
        
            <div class="slides fades">
                
                <div class="form-group row">
                    <label class="mt-0 pl-3" style="font-size: 20px;">Firstname</label>
                    <div class="input-group form-group pl-3 pr-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input type="text" class="form-control input-custom-height" id="firstname"
                        name="firstname" placeholder="Firstname">
                    </div>

                    <label class="mt-1 pl-3" style="font-size: 20px;">Lastname</label>
                    <div class="input-group form-group pl-3 pr-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input type="text" class="form-control input-custom-height"
                        id="lastname" name="lastname" placeholder="Lastname">
                    </div>
                </div>
         
            </div>

            <div class="slides fades">
                <div class="form-group row">
                    <label class="mt-0 pl-3" style="font-size: 20px;">Email</label>
                    <div class="input-group form-group pl-3 pr-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input type="text" class="form-control input-custom-height" 
                        id="email" name="email" placeholder="Email">
                    </div>

                    <label class="mt-1 pl-3" style="font-size: 20px;" id="SignupPassword">Password</label>
                    <div class="input-group form-group pl-3 pr-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input type="password" class="form-control input-custom-height"
                        id="password" name="password" placeholder="password">
                    </div>
                </div>
            </div>

            <div class="slides fades">
                <div class="form-group row">
                    <label class="mt-0 pl-3" style="font-size: 20px;">Sign up as: </label>
                    <div class="input-group form-group pl-3 pr-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <select class="form-control" name="position" id="position" style="height: 50px;">
                            <option value="teacher">Teacher</option>
                            <option value="student">Student</option>
                        </select>
                    </div>
                </div>
            </div>

            <hr>
            <div class="col-sm-12 mt-2 sub">
                <div class="btn btn-primary float-left" id="prev">prev</div>
                <div class="btn btn-primary float-right" id="next">next</div>
