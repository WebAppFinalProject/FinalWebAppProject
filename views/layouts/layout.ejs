    <title><%=title %> </title>
    <link rel="shortcut icon" href="/static/img/partLog.ico" type="image/x-icon">
    <link rel="stylesheet" href="/static/css/style.css">

</head>

<body>
    <!-- header part -->
    <div class="border-bottom container-fluid navbar navbar-expand-sm bg-dark">
        <a href="#" class="nav-item navbar-brand"><img src="/static/img/partLog.png" width="60" height="55"
                alt="Quiz Zone Logo" srcset=""><span class="font-weight-bold display-2></h1>">Quiz Zone</span></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse">
