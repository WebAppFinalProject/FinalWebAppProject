    <!-- this is the body part -->
    <%- body %>

    <!-- create footer here -->
    <div class="container-fluid bg-dark">
        <div class="row">
            <div class="col-md-6">
                Ask as some questions and suggestions
            </div>
            <div class="col-md-6">
                Stay connected!
                <form class="form-group">
                    <input type="text" class="form-control">
                </form>
            </div>
        </div>
