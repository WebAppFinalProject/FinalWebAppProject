<div style="z-index: 0;">
    <input type="hidden" id="userId" value="<%=userId%>">
    <div class="navbar navbar-expand-md navbar-light bg-light border-bottom position-relative">
        <a class="ml-2 btn" id="showMenu"><i class="fa fa-bars"></i></a>
        <div class="navbar-nav ml-auto " id="create-cont">
            <span class="mr-2 btn btn-white createExam"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp;&nbsp;Create
                Exam</span>

        </div>
    </div>
    <!-- side bar -->
    <div class="collapse border-right position-fixed h-100 bg-dark w" id="sideb">
        <p class="text-left  p-4 dashMenu dashMenuActive"><a href="#" class="text-white">Exams</a></p>
        <p class="text-left  p-4 dashMenu"><a href="#">Schedules</a></p>
        <p class="text-left  p-4 dashMenu"><a href="#">Active Exams</a></p>
        <p class="text-left  p-4 dashMenu"><a href="#">Expired Exams</a></p>
        <p class="text-left  p-4 dashMenu"><a href="#">Settings</a></p>
    </div>



    <!-- display if no exam created yet -->
    <div class="row" id="content">
        <div class=" container border bg-info mt-5">
            <h1 class="text-center mt-3 text-white" id="examTitle">Title of the Exam</h1>


            <h5 class="text-white" id="code">Code:</h5>


            <div class="container border bg-white">
                <h2 class="text-center">Exam Details</h2>
                <div class="position-center mb-5">
                    <div class="container">
                        <h5 class="ml-5" id="expirationDate">Expiration Date: </h5>
                    </div>
                    <div class="container">
                        <h5 class="ml-5" id="timeLimit">Time Limit: </h5>
                    </div>
                    <div class="container">
                        <h5 class="ml-5 ">Status: </h5>
                    </div>
                </div>
            </div>
            <br>
            <div class="border bg-white mb-5">
                <h2 class="text-center">Questions</h2>
                <div class="accordion" id="accordionExample">
                    <div class="card z-depth-0 bordered">
                        <div class="card-header" id="headingOne">
                            <h5 class="mb-0">
                                <button class="btn btn-link" type="button" data-toggle="collapse"
                                    data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    Question Number 1
                                </button>
                            </h5>
                        </div>
                        <div id="collapseOne" class="collapse" aria-labelledby="headingOne"
                            data-parent="#accordionExample">
                            <div class="card-body">
                                Anim pariatur cliche reprehenderit, enim eiusmod high life accusamus terry richardson ad
                                squid. 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>